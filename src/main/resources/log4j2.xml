<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
   <Appenders>
      <Console name="Console" target="SYSTEM_OUT">
         <!--<PatternLayout pattern="%date{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %level %logger.%method:%line: %message%n"/>-->
         <PatternLayout pattern="%method: %message%n"/>
      </Console>
      <File name="File" fileName="target/log.log">
         <PatternLayout pattern="%date{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %level %logger.%method:%line: %message%n"/>
      </File>
   </Appenders>
   <Loggers>
      <Root level="debug">
         <AppenderRef ref="Console"/>
         <!--<AppenderRef ref="File" />-->
         <!--TODO: should be test scope json-->
      </Root>
   </Loggers>
</Configuration>
